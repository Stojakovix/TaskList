<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskList.Views.MainItemPage"
             xmlns:viewModel="clr-namespace:TaskList.ViewModel"
             Title="MainItemPage">

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<Label Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Column="0" Text="Add new task!" />-->
        <Entry Placeholder="Novi task" Grid.Column="0" Text="{Binding TextEntry, Mode=TwoWay}"/>
        <Picker Grid.Column="1" SelectedIndex="{Binding Urgency}" />
        <Button Text="Add new" Grid.Column="2"  Command="{Binding SaveTask}"/>
        <ListView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Items}"> 
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding [0].Name}"/>
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>